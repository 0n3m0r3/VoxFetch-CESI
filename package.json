{
  "name": "voxfetch-cesi",
  "version": "1.0.0",
  "description": "Download ScholarVox books as PDFs - Made for CESI students",
  "license": "MIT",
  "private": true,
  "type": "module",
  "bin": {
    "voxfetch": "dist/index.js"
  },
  "scripts": {
    "build": "tsc -p .",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "download": "tsx src/index.ts",
    "download:debug": "tsx src/index.ts --debug",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "playwright:install": "playwright install chromium"
  },
  "dependencies": {
    "@napi-rs/keyring": "^1.2.0",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "pdf-lib": "^1.17.1",
    "playwright": "^1.47.2"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3"
  }
}
